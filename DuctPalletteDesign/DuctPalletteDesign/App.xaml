<Application x:Class="DuctPalletteDesign.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DuctPalletteDesign"
             xmlns:viewModel="clr-namespace:DuctPalletteDesign.MVVM.View_Model"
             xmlns:view="clr-namespace:DuctPalletteDesign.MVVM.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme\NormalTextBlock.xaml"/>
                <ResourceDictionary Source="Theme\MenuButtonTheme.xaml"/>
                <ResourceDictionary Source="Theme\GenericTextBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type viewModel:DrawingDetails}">
                <view:DrawingDetails/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
